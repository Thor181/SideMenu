<UserControl x:Class="SideMenu.Views.AppCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SideMenu.Views"
             mc:Ignorable="d"  
             Height="50" Width="70"
             Style="{StaticResource AppCard}" Cursor="Hand">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image Source="{Binding AppImage}" SnapsToDevicePixels="True" Grid.Row="0"></Image>
        <TextBlock Text="{Binding AppName}" d:Text="AppName" Grid.Row="1" Foreground="Black" FontSize="10" LineHeight="9" LineStackingStrategy="BlockLineHeight" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" VerticalAlignment="Bottom"  ></TextBlock>
    </Grid>
</UserControl>
